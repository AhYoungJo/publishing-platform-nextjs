{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "commit": "cz",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "all": "concurrently \"json-server --watch src/db/db.json --port 5500\" \"next dev\""
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "concurrently": "^8.2.2",
    "date-fns": "^3.6.0",
    "json-server": "^1.0.0-beta.1",
    "mongoose": "^8.5.3",
    "next": "^14.2.32",
    "next-auth": "^5.0.0-beta.29",
    "react": "^18",
    "react-dom": "^18",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^4.1.12",
    "uuid": "^10.0.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "commitizen": "^4.3.1",
    "cz-customizable": "^7.5.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "postcss": "^8",
    "typescript": "^5"
  },
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "fe/**/*.{js,svelte}": "npm run lint:staged --prefix fe"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable",
      "config": ".cz-config.js"
    }
  }
}
